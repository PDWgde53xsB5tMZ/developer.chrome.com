{% from 'macros/icon.njk' import icon with context %}

<announcement-banner 
  class="cookie-banner hairline-top" 
  storage-key="user-cookies"
>
  <!-- Display a message to inform the user about the use of cookies -->
  <div class="type--small">
    {{ 'i18n.common.cookie_banner.explainer' | i18n(locale) }}
    <!-- A link to learn more about cookies and data privacy -->
    <a class="material-button button-text color-blue-medium display-inline-flex align-center"
       href="{{ site.cookiesCtaUrl }}"
    >
      <!-- The link text and an external link icon -->
      {{ 'i18n.common.cookie_banner.learn_more' | i18n(locale) }}
      {{ icon('external-link', {label: 'i18n.common.external_link' | i18n(locale), className: 'gap-left-200'}) }}
    </a>
  </div>
  <!-- Controls to accept or reject cookies -->
  <div class="cookie-banner__controls">
    <button class="material-button button-filled color-bg bg-primary" 
      data-banner-close-btn 
      storage-value="accepts"
    >
      <!-- The button text to accept cookies -->
      {{ 'i18n.common.cookie_banner.accept' | i18n(locale) }}
    </button>
    <button class="material-button button-filled color-bg bg-primary" 
      data-banner-close-btn 
      storage-value="rejects"
    >
      <!-- The button text to reject cookies -->
      {{ 'i18n.common.cookie_banner.reject' | i18n(locale) }}
    </button>
  </div>
</announcement-banner>

