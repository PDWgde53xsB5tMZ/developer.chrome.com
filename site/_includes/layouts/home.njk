      <div class="display-flex direction-column grid-gap-500">  <!-- Defines a div container for the first column with specified classes -->
        {% set post = helpers.findByUrl(collections.all, '/blog/chrome-at-io23', 'en') %}  <!-- Sets the post variable to the post with the specified URL -->
        {% if post %}  <!-- If the post exists -->
        {{ featuredPostCard(post, {  <!-- Calls the featuredPostCard macro with the post variable and specified parameters -->
          icon: 'star',  <!-- The icon for the featured post card -->
          actionText: 'Discover',  <!-- The action text for the featured post card button -->
          actionUrl: '/blog/chrome-at-io23/'  <!-- The action URL for the featured post card button -->
        }) }}
        {% endif %}
        {% set blog = 'blog-' + locale %}  <!-- Sets the blog variable to the blog directory for the current locale -->
        {{ featuredPostCard(collections[blog][0], {  <!-- Calls the featuredPostCard macro with the first post from the blog directory and specified parameters -->
          title: 'i18n.nav.side_nav.blog' | i18n(locale),  <!-- The title for the featured post card (translated) -->
          actionText: 'i18n.common.see_all_articles' | i18n(locale),  <!-- The action text for the featured post card button (translated) -->
          actionUrl: '/blog'  <!-- The action URL for the featured post card button -->
        }) }}
        {{ releasesCard() }}  <!-- Calls the releasesCard macro with no parameters -->

        {% set meetTheTeam = helpers.findByUrl(collections.all, '/meet-the-team', 'en') %}  <!-- Sets the meetTheTeam variable to the post with the specified URL -->

        {% if meetTheTeam %}  <!-- If the meetTheTeam post exists -->
          {{
            featuredPostCard(meetTheTeam, {  <!-- Calls the featuredPostCard macro with the meetTheTeam post and specified parameters -->
              icon: 'calendar',  <!-- The icon for the featured post card -->
              title: 'i18n.events.meet_the_team_card.tag' | i18n(locale),  <!-- The title for the featured post card (translated) -->
              actionText: 'i18n.events.meet_the_team_card.cta' | i18n(locale),  <!-- The action text for the featured post card button (translated) -->
              actionUrl: '/meet-the-team/',  <!-- The action URL for the featured post card button -->
              class: 'featured-card--bg-yellow rounded-lg width-full'  <!-- The class for the featured post card container -->
            })
          }}
        {% endif %}
      </div>
      <div class="display-flex direction-column grid-gap-500">  <!-- Defines a div container for the second column with specified classes -->
