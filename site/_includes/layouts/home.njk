{% extends "layouts/base.njk" %}  <!-- Extends the base layout for this template -->

{% block css %}
{% InlineCss '/css/home.css' %}  <!-- Inlines the CSS from home.css file into the page -->
{% endblock %}

{% from 'macros/cards/hero-card.njk' import heroCard with context %}  <!-- Imports the heroCard macro from the specified file with context -->
{% from 'macros/cards/featured-post-card.njk' import featuredPostCard with context %}  <!-- Imports the featuredPostCard macro from the specified file with context -->
{% from 'macros/cards/featured-docs-card.njk' import featuredDocsCard with context %}  <!-- Imports the featuredDocsCard macro from the specified file with context -->
{% from 'macros/cards/featured-tweet-card.njk' import featuredTweetCard with context %}  <!-- Imports the featuredTweetCard macro from the specified file with context -->
{% from 'macros/cards/releases-card.njk' import releasesCard with context %}  <!-- Imports the releasesCard macro from the specified file with context -->

{% block content %}  <!-- Defines the block for the page content -->
