{% macro featuredPostCard(post, options) %}
{# The macro receives a post object and an options object as arguments #}

{% set pd = post.data %}
{# Extract the data from the post object #}

{% set cardIcon = options.icon or 'blog' %}
{# Set the card icon to the provided value or 'blog' if not provided #}

{% set cardTitle = options.title or 'i18n.common.featured' | i18n(locale) %}
{# Set the card title to the provided value or a localized 'Featured' string #}

{% set actionText = options.actionText %}
{% set actionUrl = options.actionUrl %}
{# Extract the optional action button text and URL #}

{% set class = options.class or 'hairline rounded-lg width-full' %}
{# Set the class for the card container based on the provided value or a default value #}

<div class="featured-card {{ class }}">
{# Start the card container with the specified class #}

  <div class="card-title-bar color-blue-medium">
  {# Start the card title bar with a blue medium color #}

    {{ icon(cardIcon, {hidden: true}) }}
    {# Display the card icon (if provided) with the 'hidden' attribute set to true #}

    <span class="gap-left-200 flex-1 user-select-none">
    {# Start a span for the card title with some styling classes #}

      {{ cardTitle }}
      {# Display the card title #}

    </span>
  </div>

  {% set thumbnail = pd.hero or pd.thumbnail %}
  {% set alt = pd.alt %}

  {% if thumbnail %}
    <div class="featured-card__thumbnail gap-top-300">
  {# Start the thumbnail container if a thumbnail is provided #}

      <a class="display-block" href="{{ post.url }}" {% if not alt %}aria-hidden="true" tabindex="-1"{% endif %}>
  {# Start a link to the post with some attributes #}

        {% Img
          class="rounded-100 object-fit-cover width-full",
          src=thumbnail,
          alt=alt,
          width="278",
          height="156",
          sizes="(min-width: 592px) 391px, calc(100vw - 82px)"
        %}
      </a>
  {# Display the thumbnail image #}

    </div>
  {% endif %}

  <h2 class="type--h3-card gap-top-300">
  {# Start the post title container #}

