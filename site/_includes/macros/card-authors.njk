{% macro cardAuthors(authors, date) %}
  <div class="card-authors display-flex align-start">
    {#
      This div block displays the authors' avatars and names.
      If there are less than three authors, it displays their avatars with overlapping style.
      If there are three or more authors, it only displays their names.
      If there's no data for the author, it just renders their ID.
    #}

    {% if authors.length < 3 %}
      {#
        Loop through the first three authors if there are less than three.
      #}
      {% for authorId in authors %}
        {#
          Set the authorTitle variable to the internationalized author title.
          Set the authorImage variable to the author's image URL or the default avatar if not available.
        #}
        {% set authorTitle = 'i18n.authors.' ~ authorId ~ '.title' %}
        {% set authorImage = authorsData[authorId].image or site.defaultAvatarImg %}

        {% if authorImage %}
          {#
            Render the author's avatar as a clickable link to their author page.
          #}
          <a href="/authors/{{authorId}}/" translate="no" class="card-authors__image">
            {#
              Use the Img macro to load the author's image with specified dimensions and attributes.
            #}
            {% Img
              class="flex-shrink-none width-600 height-600",
              src=authorImage,
              alt=authorTitle | i18n(locale),
              width="40",
              height="40",
              sizes="40px",
              options={minWidth: 40, maxWidth: 120}
            %}
          </a>
        {% endif %}
      {% endfor %}
    {% endif %}

    <div class="card-authors__meta">
      {#
        Render the list of authors' names and the publication date.
      #}
      <p class="type--small">
        {% set sep = joiner(', ') %}
        {% for authorId in authors %}
          {#
            Add a separator between author names, and render the author's title as a clickable link to their author page.
            If there's no data for the author, just render their ID.
          #}
          {{- sep() -}}
          {%- if authorsData[authorId] -%}
